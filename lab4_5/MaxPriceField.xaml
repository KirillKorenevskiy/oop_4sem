<UserControl x:Class="lab4_5.MaxPriceField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lab4_5"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="70">
    <Grid>
        <TextBox Text="{Binding Value, RelativeSource={RelativeSource AncestorType=local:MaxPriceField}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBox_TextChanged"/>
    </Grid>
</UserControl>
