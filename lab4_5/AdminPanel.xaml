<Window x:Class="lab4_5.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="AdminPanel" Height="360" Width="510"
    Cursor="{DynamicResource Kursor}">

    <Window.Resources>
        <Cursor x:Key="Kursor">D:\4_сем\ооп\lab4_5\Normal Select.cur</Cursor>
    </Window.Resources>
    
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="{DynamicResource AddCat}" Width="400" Margin="0,0,0,10" Name="CreatePage" />

            <Button Content="{DynamicResource DelCat}" Width="400" Name="DeletePage" />
        </StackPanel>
        <Button Content="{DynamicResource Back}" HorizontalAlignment="Left" Margin="244,218,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

    </Grid>
</Window>