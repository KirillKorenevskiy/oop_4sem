<Window x:Class="lab4_5.ServiceDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4_5"
        mc:Ignorable="d"
        Title="ServiceDetailsWindow" Height="450" Width="800">
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" x:Name="ServiceImage" Margin="0,12,0,242" Width="270" Height="200" Stretch="Uniform" />
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock FontSize="16" x:Name="NameTextBlock" Margin="0 0 0 10" TextWrapping="Wrap"/>
            <TextBlock FontSize="14" x:Name="DescriptionTextBlock" Margin="0 0 0 10" TextWrapping="Wrap" />
            <TextBlock FontSize="14" x:Name="CategoryTextBlock" Margin="0 0 0 10" TextWrapping="Wrap" />
            <TextBlock FontSize="14" x:Name="CostTextBlock" Margin="0 0 0 10" TextWrapping="Wrap" />
            <TextBlock FontSize="14" x:Name="DoctorTextBlock" Margin="0 0 0 10"  TextWrapping="Wrap" />
            <TextBlock FontSize="14" x:Name="CabinetTextBlock" Margin="0 0 0 10"  TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
